<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="salinesingularity.singularitytimingapplication.ReviewActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="@string/review_screen_text"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_width="300dp" />

    <Button
        android:text="@string/copy_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCopyDataAgain"
        android:onClick="onCopyToClipboard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/new_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:elevation="0dp"
        android:onClick="onNewMatch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnCopyDataAgain"
        android:layout_toEndOf="@+id/btnCopyDataAgain"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:srcCompat="@drawable/SalineSingularityLogo2"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
