<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/climbContainer2">

        <Button
            android:text="@string/finish_climb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnBeaconLit"
            android:layout_weight="1"
            android:onClick="onFinishClimb"
            android:backgroundTint="@color/btnGreen" />

        <Button
            android:text="@string/fail_climb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnClimbFailure"
            android:backgroundTint="@color/btnRed"
            android:onClick="onFailedClimb"
            android:layout_weight="1" />

        <Button
            android:text="@string/undo_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button5"
            android:textSize="28sp"
            android:onClick="onClimbEventUndo"
            android:layout_weight="0.5" />

    </LinearLayout>




</LinearLayout>